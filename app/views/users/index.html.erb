<h3>Users</h3>
<div class="span8">
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Registered</th>
				<th>Role</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= link_to user.name, user %></td>
				<td><%= user.email %></td>
				<td><%= user.created_at.to_date %></td>
				<td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
				<td>
					<a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
					<%= render user %>
				</td>
				<td>
					<a data-toggle="modal" href="#delete-<%= user.id %>" class="btn btn-mini" type="button">Delete User</a>
				</td>
			</tr>
<!-- Modal for the delete users popup -->
			<div id="delete-<%= user.id %>" class="modal" style="display: none;">
			  
			  <div class="modal-dialog">
			  	<div class="modal-content">
			    	<div class="modal-header">
			      	<a class="close" data-dismiss="modal">&#215;</a>
			      	<h3>Delete user</h3>
			    	</div>
			    	
			    	<div class="modal-body">
			      		<%= link_to("Delete user", user_path(user), :data => { :confirm => "Whoa, nelly! You're about to permenantly delete this user. Are you absolutely sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %>
			    	</div>
			    
			    	<div class="modal-footer">
			      	
			      	<a class="btn" data-dismiss="modal" href="#">Close</a>
			    	</div>
			    </div>
			  </div>
			 
			</div>
		<% end %>
	</tbody>
</table>
</div>


